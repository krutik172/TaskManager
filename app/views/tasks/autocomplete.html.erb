<% @search_results.each do |result| %>
  <% if current_user.tasks.include?(result) %>
    <li role="option" class="block py-2 pl-3 pr-4 text-white bg-blue-700 rounded md:bg-transparent md:text-blue-700 md:p-0 dark:text-white"><a href="/tasks/<%= result.id %>"><%= result.description %></a></li>
  <% end %>
<% end %>