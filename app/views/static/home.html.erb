<div class="container">

    <%if user_signed_in?%>

        <h1 style = "font-size: 60px;">Welcome <%= current_user.name %>!</h1>
        <div class="max-w-xs mx auto bg-white">
            <div data-controller="autocomplete" data-autocomplete-url-value="/autocomplete">
                <input type="text" class="inline-block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-96" data-autocomplete-target="input" placeholder="Enter task name to search"/>
                <ul data-autocomplete-target="results"></ul>
            </div>
        </div>

    <%else%>
    
        <h1 style="font-size: 30px;">Log in to view your Tasks</h1>
        <%= link_to 'Sign In', new_user_session_path, class: "btn py-2 bg-blue-600 text-white" %>
        <h1 style="font-size: 30px;">New user? Sign up</h1>
        <%= link_to 'Sign Up', new_user_registration_path, class: "btn py-2 bg-blue-600 text-white"%>

    <%end%>

</div>